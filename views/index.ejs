                    </a>
                </li>

            </ul>

        </div>
    </nav>

    <section class="main-code-editor">

        <h1>Input</h1>

        <form action="/run" onsubmit="onCodeSubmit();" method="post">

            <select name="language" id="lang-selector" onchange="langChange(this)">
                <option value="cpp">C/C++</option>
                <option value="py">Python</option>
                <option value="go">Go Lang</option>
                <option value="f90">Fortran</option>
                <option value="java">Java</option>
                <option value="php">PHP</option>
            </select>

            <div class="input-container">
                <div id="editor"></div>
                <textarea name="code_ide" id="editor-textarea"></textarea>
            </div>
            <br>

            <div class="user-input">
                <textarea class="user-input-textarea" placeholder="User Input"></textarea>
            </div>

                <h3 id="heading">User Input</h3>
                <textarea id="user-input" placeholder="your input comes here"></textarea>


            <div class="container">
                <button class="button" type="submit" name="submit_code">RUN</button>
            </div>

        </form>

    </section>
    
    <section id="output-container">
        <h1>Output</h1>
        <div id="output-display">
            <div class="output-screen">
                <%= output %>
            </div>
        </div>
    </section>
    


    <!-- ICON PACKAGES -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    
    <!-- ACE EDITOR -->
    <!-- <script src="/static/ace-editor/src-noconflict/ace.js"></script>
    <script src="/static/src-min/mode-c_cpp.js"></script> -->
    <script>
        var editor = ace.edit("editor");
        editor.setTheme("ace/theme/monokai");
        editor.session.setMode("ace/mode/c_cpp");
        </script>
        <script>
                let toggleInput = document.getElementById("#toggleInput");
                let userInput = document.getElementById("#user-Input");
                let heading = document.getElementById("#heading");

                function showHideInputBox()
                {
                    if(toggleInput.checked == true )
                    {
                        heading.style.display="block";
                        userInput.style.display="block";
                    } 
                    else
                    {
                        heading.style.display="none";
                        userInput.style.display="none";

                    }
                }
        </script>
    
    <!-- RUN -->
    <script src="/static/js/ide-setup.js"></script>



</body>

</html>